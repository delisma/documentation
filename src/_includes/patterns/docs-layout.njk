---
layout: base.njk
prism: true
---
{% include "patterns/docs-breadcrumbs.njk" %}
<div data-h2-position="base(relative)">
  <div
    data-h2-position="base(absolute)"
    data-h2-offset="base(0, auto, auto, 0)"
    data-h2-height="base(var(--heightHack))"
    data-h2-width="base(100%)"
    data-h2-bg-color="base(black)"
    data-h2-overflow="base(hidden)">
    <div
      class="accent-radial"
      data-h2-bg-color="base(accentRadial)"></div>
    <div
      class="primary-radial"
      data-h2-bg-color="base(primaryRadial)"></div>
    <div 
      data-h2-bg-color="base(divider)"
      data-h2-height="base(x.25)"
      data-h2-width="base(100%)"
      data-h2-position="base(absolute)"
      data-h2-offset="base(auto, auto, 0, 0)"></div>
  </div>
  <div data-h2-container="base(center, large, x1) p-tablet(center, large, x2)">
    <div data-h2-flex-grid="base(flex-start, 0, x1) l-tablet(stretch, 0, x3) desktop(stretch, 0, x4)">
      <div
        data-h2-position="base(relative)" 
        data-h2-flex-item="base(1of1) l-tablet(content)"
        data-h2-display="base(none) l-tablet(block)">
        {% include "patterns/docs-menu.njk" %}
      </div>
      <div data-h2-flex-item="base(1of1) l-tablet(fill)">
        {{ content | safe }}
      </div>
    </div>
  </div>
</div>
{% include "patterns/docs-footer.njk" %}