<div
  data-h2-padding="base(x3, 0) p-tablet(x3, 0) laptop(x4, 0)"
  data-h2-layer="base(1, relative)">
  <div
    {% if key === "home" %} 
      data-h2-container="base(center, medium, x1) p-tablet(center, medium, x2)"
    {% else %}
      data-h2-container="base(center, large, x1) p-tablet(center, large, x2)"
    {% endif %}>
    <div data-h2-flex-grid="base(flex-start, 0, x3) p-tablet(flex-start, 0, 0)">
      <div
        data-h2-text-align="base(center) p-tablet(left)" 
        data-h2-flex-item="base(1of1) p-tablet(1of2)">
        <p
          data-h2-font-color="base(white)"
          data-h2-font-size="base(h6)"
          data-h2-font-weight="base(700)">Hydrogen</p>
      </div>
      <div 
        data-h2-text-align="base(center) p-tablet(right)"
        data-h2-flex-item="base(1of1) p-tablet(1of2)">
        <div
          data-h2-display="base(inline-block)" 
          data-h2-width="base(100%)">
          <span
            data-h2-display="base(block)"
            data-h2-font-color="base(white)"
            data-h2-font-size="base(h6, 1.3)"
            data-h2-margin="base(0, auto, x1, auto)"
            data-h2-font-weight="base(200)"
            data-h2-width="base(70%) p-tablet(100%)">Made in Canada by humans like you.</span>
          <div
            data-h2-height="base(x.25)"
            data-h2-bg-color="base(accent)"
            data-h2-radius="base(pill)"
            data-h2-width="base(25%) p-tablet(50%) l-tablet(65%)"
            data-h2-max-width="base(x20)"
            data-h2-margin="base(0, auto) p-tablet(0, 0, 0, auto)"></div>
        </div>
      </div>
    </div>
  </div>
</div>