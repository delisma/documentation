<div 
  id="main"
  data-h2-bg-color="base(black)"
  data-h2-padding="base(x2, 0) l-tablet(x4, 0, x3, 0)"
  data-h2-layer="base(1, relative)"
  data-h2-overflow="base(hidden)">
  <div
    class="accent-radial"
    data-h2-bg-color="base(accentRadial)"></div>
  <div
    class="primary-radial"
    data-h2-bg-color="base(primaryRadial)"></div>
  <div
    data-h2-text-align="base(right)" 
    data-h2-container="base(center, medium, x1) p-tablet(center, medium, x2)"
    data-h2-position="base(relative)">
    <div
      data-h2-display="base(inline-block)" 
      data-h2-margin="base(0, 0, auto, auto)"
      data-h2-width="base(50%)">
      <div
        data-h2-height="base(x.25)"
        data-h2-bg-color="base(accent)"
        data-h2-radius="base(pill)"
        data-h2-width="base(25%) p-tablet(50%) l-tablet(65%)"
        data-h2-max-width="base(x20)"
        data-h2-margin="base(0, auto) p-tablet(0, 0, 0, auto)"></div>
      <span
        data-h2-display="base(block)"
        data-h2-font-color="base(white)"
        data-h2-font-size="base(h6, 1.3)"
        data-h2-margin="base(x1, auto, 0, auto) p-tablet(x1, 0, 0, auto)"
        data-h2-font-weight="base(200)"
        data-h2-width="base(70%)">{{ home[locale].slogan }}</span>
    </div>
    <h1
      data-h2-font-color="base(white)"
      data-h2-text-align="base(center) l-tablet(left)"
      data-h2-margin="base(x4, 0, x2, 0)"
      data-h2-font-weight="base(700)">{{ site.name }}</h1>
  </div>
</div>
<div 
  data-h2-bg-color="base(divider)"
  data-h2-height="base(x.25)"></div>
<div 
  data-h2-container="base(center, medium, x1) p-tablet(center, medium, x2)"
  data-h2-margin="base(-x3, auto, 0, auto)"
  data-h2-layer="base(2, relative)">
  <div data-h2-flex-grid="base(flex-start, 0, x2, x1) l-tablet(stretch, 0, x2)">
    {% for item in home[locale].intro %}
      <div data-h2-flex-item="l-tablet(1of3)">
        <div
          data-h2-bg-color="base(white) base:dark(dark.font)"
          data-h2-padding="base(x2)"
          data-h2-radius="base(rounded)"
          data-h2-shadow="base(m)"
          data-h2-height="base(100%)">
          <p
            data-h2-font-weight="base(800)"
            data-h2-font-size="base(copy)"
            data-h2-font-color="base(dark.primary) base:dark(lighter.primary)">{{ item.title }}</p>
          {% for item in item.content %}
            <p data-h2-margin="base(x1, 0, 0, 0)">{{ item }}</p>
          {% endfor %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>