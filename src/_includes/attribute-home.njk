<div 
  data-h2-padding="base(x4, 0)"
  data-h2-layer="base(2, relative)">
  <div
    data-h2-position="base(absolute)"
    data-h2-offset="base(0, auto, auto, -x5)"
    data-h2-height="base(100%)"
    data-h2-width="base(var(--widthHack))"
    data-h2-bg-color="base(black)"
    data-h2-overflow="base(hidden)">
      <div
        class="accent-radial"
        data-h2-bg-color="base(accentRadial)"></div>
      <div
        class="primary-radial"
        data-h2-bg-color="base(primaryRadial)"></div>
      <div 
        data-h2-bg-color="base(divider)"
        data-h2-height="base(x.25)"
        data-h2-width="base(100%)"
        data-h2-position="base(absolute)"
        data-h2-offset="base(auto, auto, 0, 0)"></div>
  </div>
  <div data-h2-layer="base(2, relative)">
    <div
      data-h2-text-align="base(center) l-tablet(left)" 
      data-h2-flex-grid="base(center, 0, x2)">
      <div data-h2-flex-item="base(1of1) l-tablet(content)">
        <img 
          src="/static/img/icon-gear.svg" 
          alt="{{ home[locale].otherFeatures.iconAlt }}" 
          data-h2-width="base(25%) p-tablet(15%) l-tablet(x3)"
          data-h2-display="base(inline-block)"
          data-h2-margin="base(5px, 0, 0, 0)"
          class="section-icon">
      </div> 
      <div data-h2-flex-item="base(1of1) l-tablet(fill)">
        <h2
          data-h2-font-color="base(white)"
          data-h2-margin="base(0)"
          data-h2-font-weight="base(700)">
            {{ title }}
          </h2>
      </div>
    </div>
    <div data-h2-padding="base(x2, 0, 0, 0)">
      <div data-h2-flex-grid="base(flex-start, 0, x2, 0)">
        <div data-h2-flex-item="base(content)">
          <div
            data-h2-width="base(25%) l-tablet(x3)"
            data-h2-height="base(x.25)"
            data-h2-margin="base(0.75rem, auto, auto, auto)"
            data-h2-bg-color="base(accent)"
            data-h2-radius="base(pill)"></div>
        </div>
        <div data-h2-flex-item="base(fill)">
          <p
            data-h2-font-size="base(h6, 1.3)"
            data-h2-font-weight="base(200)"
            data-h2-font-color="base(white)">{{ summary }}</p>
        </div>
      </div>
    </div>
  </div>
</div>
<div data-h2-margin="base(x4, auto, 0, auto)">
  <div data-h2-flex-grid="base(flex-start, 0, x2, 0)">
    <div data-h2-flex-item="base(content)">
      <div
        data-h2-width="base(25%) l-tablet(x3)"
        data-h2-height="base(x.25)"
        data-h2-margin="base(2rem, auto, auto, auto)"
        data-h2-bg-color="base(primary) base:dark(accent)"
        data-h2-radius="base(pill)"></div>
    </div>
    <div data-h2-flex-item="laptop(fill)">
      <h3
        data-h2-font-size="base(h3, 1.3)"
        data-h2-font-weight="base(800)">Syntax</h3>
      <p data-h2-margin="base(x1, auto, auto, auto)">{{ syntaxSummary | safe }}</p>
      <div data-h2-flex-grid="base(stretch, 0, x1)">
        {% for option in syntax %}
          <div data-h2-flex-item="base(1of1)">
            <h3
              data-h2-font-size="base(h4, 1.3)"
              data-h2-margin="base(x3, auto, auto, auto)"
              data-h2-font-weight="base(200)">{{ option.label }}</h3>
          </div>
          <div data-h2-flex-item="base(1of1)">
            <pre
              data-h2-bg-color="base(dark.font)"
              data-h2-padding="base(x1)"
              data-h2-radius="base(code)"
              data-h2-overflow="base(auto, x)"
              data-h2-margin="base(0)"
              data-h2-font-color="base(white)"><code>{{ option.code }}</code></pre>
          </div>
          {% for value in option.values %}
            {% if option.values | length == 1  %}
              <div data-h2-flex-item="base(1of1)">
            {% else %}
              <div data-h2-flex-item="base(1of2)">
            {% endif %}
              <div
                data-h2-background-color="base(white) base:dark(dark.font)"
                data-h2-shadow="base(l)"
                data-h2-height="base(100%)"
                data-h2-radius="base(rounded)"
                data-h2-padding="base(x1.5)">
                <h4
                  data-h2-font-size="base(h5, 1.3)"
                  data-h2-font-weight="base(700)">{{ value.key }}</h4>
                <ul
                  data-h2-margin="base(x.5, auto, auto, auto)"
                  data-h2-padding="base(0)" 
                  style="list-style: none;">
                  <li data-h2-display="base(inline-block)">
                    {% if value.required == true %}
                      <span
                        data-h2-font-weight="base(700)"
                        data-h2-font-size="base(caption)"
                        data-h2-margin="base(auto, x1, auto, auto)"
                        data-h2-color="base(primary) base:dark(lighter.primary)">REQUIRED</span>
                    {% else %}
                      <span
                        data-h2-font-weight="base(700)"
                        data-h2-font-size="base(caption)"
                        data-h2-margin="base(auto, x1, auto, auto)"
                        data-h2-color="base(gray)">OPTIONAL</span>
                    {% endif %}
                  </li>
                  <li data-h2-display="base(inline-block)">
                    {% if value.css == true and value.keys == false %}
                      <span
                        data-h2-font-weight="base(700)"
                        data-h2-font-size="base(caption)"
                        data-h2-margin="base(auto, x1, auto, auto)"
                        data-h2-font-color="base(primary) base:dark(lighter.primary)">CSS VALUES ONLY</span>
                    {% elseif value.css == true and value.keys == true %}
                      <span
                        data-h2-font-weight="base(700)"
                        data-h2-font-size="base(caption)"
                        data-h2-margin="base(auto, x1, auto, auto)"
                        data-h2-font-color="base(primary) base:dark(lighter.primary)">KEYS &amp; CSS VALUES</span>
                    {% elseif value.css == false and value.keys == true %}
                      <span
                        data-h2-font-weight="base(700)"
                        data-h2-font-size="base(caption)"
                        data-h2-margin="base(auto, x1, auto, auto)"
                        data-h2-color="base(primary) base:dark(lighter.primary)">KEYS ONLY</span>
                    {% endif %}
                  </li>
                </ul>
                {% if value.key == 'Color' or value.key == 'Couleur' or value.key == 'Color/gradient' or value.key == 'Couleur/gradient' %}
                  <p data-h2-margin="base(x1, auto, auto, auto)">Color values can be set by using one of your defined color keys or by using a CSS color value (hex, rgb, etc.).{% if value.key == 'Color/gradient' or value.key == 'Couleur/gradient' %} Gradients must be set using your defined gradient key; CSS gradient syntax is not available.{% endif %}</p>
                  {# <h5
                    data-h2-font-weight="base(700)"
                    data-h2-font-size="base(h6, 1.3)"
                    data-h2-margin="base(x2, auto, auto, auto)" 
                    data-h2-margin="base(x1, auto, auto, auto)">Configured colors</h5>
                  <p data-h2-margin="base(x.5, auto, auto, auto)">By defining a color in your configuration, you can access that color by its key value.</p>
                  <p data-h2-margin="base(x.5, auto, auto, auto)">These keys also accept modifiers that allow you to access tints, shades, and opacities of the color you defined. For example, if you defined your main brand color as "primary", you can access up to three shades darker by using "dark.primary", "darker.primary", and "darkest.primary".</p>
                  <p data-h2-margin="base(x.5, auto, auto, auto)">Opacity works in a similar way using a numeric value. For example, you can access a 50% opacity value by using "primary.5". Similarly, you can also access opacity values for modified colors as well, using both modifiers together: "lighter.primary.2".</p> #}
                  <h6
                    data-h2-margin="base(x1, auto, auto, auto)"
                    data-h2-font-weight="base(700)" 
                    data-h2-font-size="base(copy, 1.3)">Example configured colors</h6>
                  <ul 
                    data-h2-margin="base(x.5, auto)"
                    style="list-style: none;"
                    data-h2-padding="base(0)">
                    {% set exampleArray = ['primary', 'accent', 'light.primary', 'accent.5'] %}
                    {% for item in exampleArray %}
                      <li 
                        data-h2-display="base(inline-block)"
                        data-h2-padding="base(x.25, x1)"
                        data-h2-background-color="base(black.1) base:dark(light.font.1)"
                        data-h2-border="base(all, 1px, solid, black) base:dark(all, 1px, solid, light.font)"
                        data-h2-margin="base(auto, auto, 4px, auto)"
                        data-h2-radius="base(pill)"
                        data-h2-font-size="base(caption)">
                        <code>{{ item }}</code>
                      </li>
                    {% endfor %}
                  </ul>
                  {# <h5
                    data-h2-font-weight="base(700)"
                    data-h2-font-size="base(h6, 1.3)"
                    data-h2-margin="base(x2, auto, auto, auto)" 
                    data-h2-margin="base(x1, auto, auto, auto)">CSS colors</h5>
                  <p data-h2-margin="base(x.5, auto, auto, auto)">Values that accept colors also allow you to enter any old CSS color in your preferred format.</p> #}
                  <h6
                    data-h2-margin="base(x1, auto, auto, auto)"
                    data-h2-font-weight="base(700)" 
                    data-h2-font-size="base(copy, 1.3)">Example CSS colors</h6>
                  <ul 
                    data-h2-margin="base(x.5, auto)"
                    style="list-style: none;"
                    data-h2-padding="base(0)">
                    {% set exampleArray = ['blue', '#9d5cff', 'rgba(255, 45, 60, 1)'] %}
                    {% for item in exampleArray %}
                      <li 
                        data-h2-display="base(inline-block)"
                        data-h2-padding="base(x.25, x1)"
                        data-h2-background-color="base(black.1) base:dark(light.font.1)"
                        data-h2-border="base(all, 1px, solid, black) base:dark(all, 1px, solid, light.font)"
                        data-h2-margin="base(auto, auto, 4px, auto)"
                        data-h2-radius="base(pill)"
                        data-h2-font-size="base(caption)">
                        <code>{{ item }}</code>
                      </li>
                    {% endfor %}
                  </ul>
                  {% if value.key == 'Color/gradient' or value.key == 'Couleur/gradient' %}
                    {# <h5
                      data-h2-font-weight="base(700)"
                      data-h2-font-size="base(h6, 1.3)"
                      data-h2-margin="base(x2, auto, auto, auto)" 
                      data-h2-margin="base(x1, auto, auto, auto)">Configured gradients</h5>
                    <p data-h2-margin="base(x.5, auto, auto, auto)">Similar to colors, you can define reusable gradients in your configuration file and access them using their key. It's important that gradients have unique keys from all of your configured colors, otherwise Hydrogen will provide an error letting you know that you have a duplicate.</p> #}
                    <h6
                      data-h2-margin="base(x1, auto, auto, auto)"
                      data-h2-font-weight="base(700)" 
                      data-h2-font-size="base(copy, 1.3)">Example configured gradients</h6>
                    <ul 
                      data-h2-margin="base(x.5, auto)"
                      style="list-style: none;"
                      data-h2-padding="base(0)">
                      {% set exampleArray = ['myLinearGradient', 'myRadialGradient'] %}
                      {% for item in exampleArray %}
                        <li 
                          data-h2-display="base(inline-block)"
                          data-h2-padding="base(x.25, x1)"
                          data-h2-background-color="base(black.1) base:dark(light.font.1)"
                          data-h2-border="base(all, 1px, solid, black) base:dark(all, 1px, solid, light.font)"
                          data-h2-margin="base(auto, auto, 4px, auto)"
                          data-h2-radius="base(pill)"
                          data-h2-font-size="base(caption)">
                          <code>{{ item }}</code>
                        </li>
                      {% endfor %}
                    </ul>
                    {# <div
                      data-h2-margin="base(x2, auto, auto, auto)"
                      data-h2-padding="base(x1)"
                      data-h2-background-color="base(white) base:dark(dark.font)"
                      data-h2-radius="base(rounded)"
                      data-h2-shadow="base(l)">
                      <p data-h2-font-weight="base(700)">Please note</p>
                      <p data-h2-margin="base(x.5, auto, auto, auto)">CSS gradient values are not accepted right now.</p>
                    </div> #}
                  {% endif %}
                {% elseif value.key == 'Padding' or value.key == 'Size' or value.key == 'Width' %}
                  <p data-h2-margin="base(x1, auto, auto, auto)">Space values can be set using Hydrogen's automated space multipliers or by using CSS units (px, rem, etc.).</p>
                  {# <h5
                    data-h2-font-weight="base(700)"
                    data-h2-font-size="base(h6, 1.3)"
                    data-h2-margin="base(x2, auto, auto, auto)" 
                    data-h2-margin="base(x1, auto, auto, auto)">Hydrogen space multipliers</h5>
                  <p data-h2-margin="base(x.5, auto, auto, auto)">Hydrogen automatically generates a vertical rhythm for you based on your current line height settings. This means that you have access to helpful multiplier values that will set an amount of space based on your line height for a consistent look and feel. For example, "x2" will set space equal to 2 times your line height.</p> #}
                  <h5
                    data-h2-margin="base(x1, auto, auto, auto)" 
                    data-h2-font-weight="base(700)"
                    data-h2-font-size="base(copy, 1.3)">Example multiplier values</h5>
                  <ul 
                    data-h2-margin="base(x.5, auto)"
                    style="list-style: none;"
                    data-h2-padding="base(0)">
                    {% set exampleArray = ['x1', 'x2.5', 'x5'] %}
                    {% for item in exampleArray %}
                      <li 
                        data-h2-display="base(inline-block)"
                        data-h2-padding="base(x.25, x1)"
                        data-h2-background-color="base(black.1) base:dark(light.font.1)"
                        data-h2-border="base(all, 1px, solid, black) base:dark(all, 1px, solid, light.font)"
                        data-h2-margin="base(auto, auto, 4px, auto)"
                        data-h2-radius="base(pill)"
                        data-h2-font-size="base(caption)">
                        <code>{{ item }}</code>
                      </li>
                    {% endfor %}
                  </ul>
                  {# <h5
                    data-h2-font-weight="base(700)"
                    data-h2-font-size="base(h6, 1.3)"
                    data-h2-margin="base(x2, auto, auto, auto)" 
                    data-h2-margin="base(x1, auto, auto, auto)">CSS units</h5>
                  <p data-h2-margin="base(x.5, auto, auto, auto)">Alternatively, you can also use standard CSS units for space. This means anything from pixel values to rem units.</p> #}
                  <h5
                    data-h2-margin="base(x1, auto, auto, auto)" 
                    data-h2-font-weight="base(700)"
                    data-h2-font-size="base(copy, 1.3)">Example CSS units</h5>
                  <ul 
                    data-h2-margin="base(x.5, auto)"
                    style="list-style: none;"
                    data-h2-padding="base(0)">
                    {% set exampleArray = ['50px', '3rem', '20vw'] %}
                    {% for item in exampleArray %}
                      <li 
                        data-h2-display="base(inline-block)"
                        data-h2-padding="base(x.25, x1)"
                        data-h2-background-color="base(black.1) base:dark(light.font.1)"
                        data-h2-border="base(all, 1px, solid, black) base:dark(all, 1px, solid, light.font)"
                        data-h2-margin="base(auto, auto, 4px, auto)"
                        data-h2-radius="base(pill)"
                        data-h2-font-size="base(caption)">
                        <code>{{ item }}</code>
                      </li>
                    {% endfor %}
                  </ul>
                {% else %}
                  <p data-h2-margin="base(x1, auto, auto, auto)">{{ value.description | safe }}</p>
                  <h5
                    data-h2-margin="base(x1, auto, auto, auto)" 
                    data-h2-font-weight="base(700)"
                    data-h2-font-size="base(copy, 1.3)">Example values</h5>
                  <ul 
                    data-h2-margin="base(x.5, auto)"
                    style="list-style: none;"
                    data-h2-padding="base(0)">
                    {% for example in value.examples %}
                      <li 
                        data-h2-display="base(inline-block)"
                        data-h2-padding="base(x.25, x1)"
                        data-h2-background-color="base(black.1) base:dark(light.font.1)"
                        data-h2-border="base(all, 1px, solid, black) base:dark(all, 1px, solid, light.font)"
                        data-h2-margin="base(auto, auto, 4px, auto)"
                        data-h2-radius="base(pill)"
                        data-h2-font-size="base(caption)">
                        <code>{{ example }}</code>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% if examples == true %}
  <div data-h2-margin="base(x4, auto, 0, auto)">
    <div data-h2-flex-grid="base(flex-start, 0, x2, 0)">
      <div data-h2-flex-item="base(content)">
        <div
          data-h2-width="base(25%) l-tablet(x3)"
          data-h2-height="base(x.25)"
          data-h2-margin="base(0.95rem, auto, auto, auto)"
          data-h2-bg-color="base(primary) base:dark(accent)"
          data-h2-radius="base(pill)"></div>
      </div>
      <div data-h2-flex-item="base(fill)">
        <h3
          data-h2-font-size="base(h5, 1.3)"
          data-h2-font-weight="base(700)">Examples</h3>
        {{ content | safe}}
      </div>
    </div>
  </div>
{% endif %}