<div
  {% if section.content[0].type == "copy" or section.content[0].type == 'index' or section.content[0].type == 'group' or section.title.id === "updates" %}
    data-h2-margin="base(x1, 0, x1, 0) p-tablet(0, 0, x1, 0) desktop(0, 0, x2, 0)"
  {% else %}
    data-h2-margin="base(x1, 0, x2, 0) p-tablet(0, 0, x2, 0) desktop(0, 0, x3, 0)"
  {% endif %}>
  <div data-h2-flex-grid="base(center, 0, x1)">
    <div data-h2-flex-item="base(fill)">
      <h3 
        data-h2-font-size="base(h3, 1)" 
        data-h2-font-weight="base(800)" 
        data-h2-text-align="base(center) p-tablet(left)"
        id="{{ section.title.id }}">
        {{ section.title.text }}
        <a 
          data-h2-color="base(lightest.black) base:hover(primary) base:dark(darker.white) base:focus(black)" 
          data-h2-transition="base(color, .2s, ease, 0s)" 
          data-h2-font-size="base(copy)" 
          data-h2-display="base(inline)"
          data-h2-background-color="base:focus(focus)"
          data-h2-padding="base(x.15, x.25)"
          data-h2-vertical-align="base(middle)" 
          data-h2-font-weight="base(700)"
          style="outline: none;"
          href="{{ page.url }}#{{ section.title.id }}" 
          title="Skip to this section.">
          #
        </a>
      </h3>
    </div>
    {% if section.title.link %}
      <div
        data-h2-text-align="base(center) p-tablet(right)" 
        data-h2-flex-item="base(1of1) p-tablet(content)">
        <a
          href="{{ section.title.link.link }}"
          title="{{ section.title.link.title }}"
          data-h2-font-size="base(h6, 1.3)"
          data-h2-font-weight="base(300)"
          data-h2-background-color="base:focus(focus)"
          style="outline: none;"
          data-h2-color="base:hover(primary) base:dark:hover(lighter.primary) base:focus(black)">{{ section.title.link.label }}</a>
      </div>  
    {% endif %}
  </div>
</div>  