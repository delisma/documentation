<div
  data-h2-font-family="base(mono)"
  data-h2-background-color="base(code)"
  data-h2-color="base(white)"
  data-h2-radius="base(code)">
  <div data-h2-flex-grid="base(center, 0, x1)">
    <div data-h2-flex-item="base(fill)">
      <span
        data-h2-color="base(lighter.code)"
        data-h2-display="base(block)"
        data-h2-padding="base(x.5, x1)">{{ content.file }}</span>
    </div>
    <div data-h2-flex-item="base(content)">
      <button
        type="button"
        data-h2-background-color="base(transparent) base:focus(focus)"
        data-h2-color="base(lighter.code) base:hover(lighter.primary) base:dark(light.font) base:focus(black)"
        data-h2-border="base(all, 0px, solid, transparent) base(left, 1px, solid, light.code)"
        data-h2-cursor="base(pointer)"
        data-h2-padding="base(x.5, x1)"
        data-h2-text-decoration="base(underline)" 
        data-h2-transition="base(all, .2s, ease, 0s)"
        data-h2-font-family="base(sans)"
        data-h2-font-size="base(caption)"
        style="outline: none;">Copy code</button>
    </div>
  </div>
  <hr
    data-h2-height="base(1px)"
    data-h2-background-color="base(light.code)"
    data-h2-margin="base(0)"
    data-h2-border="base(all, 0px, solid, transparent)">
  <div data-h2-flex-grid="base(flex-start, 0, x1, 0)">
    <div data-h2-flex-item="base(content)">
      <pre
        data-h2-padding="base(x.75, 0, x.75, x1)"
        data-h2-overflow="base(auto, x)"
        data-h2-margin="base(0)"><code>{% set lineCount = 0 %}{% for item in content.items %}{% set lineCount = lineCount + 1 %}<span data-h2-color="base(lighter.code)">{{ lineCount }}</span><br>{% endfor %}</code></pre>
    </div>
    <div data-h2-flex-item="base(fill)">
      <pre
        data-h2-padding="base(x.75, 0)"
        data-h2-overflow="base(auto, x)"
        data-h2-margin="base(0)"><code>{% for item in content.items %}{{ item }}<br>{% endfor %}</code></pre>
    </div>
  </div>
</div>